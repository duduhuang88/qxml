<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--autoSize的属性在textView中为float，而获取值与设置值API参数为int，所以UI可能会对不上-->
        <TextView
            android:id="@+id/tv_111"
            android:text="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textSize="20sp"
            android:textColor="@color/color_selector_test"
            android:includeFontPadding="false"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
        <!--android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeTextType="uniform"-->

        <TextView
            android:id="@+id/tv_222"
            android:firstBaselineToTopHeight="1dp"
            android:text="ABC"
            android:shadowDx="10"
            android:shadowDy="5"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="20"
            android:includeFontPadding="false"
            android:layout_width="150dp"
            android:layout_height="50dp"/>

        <!--
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="5sp"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="1dp"-->

        <TextView
            android:gravity="end|bottom"
            android:text="123456阿斯蒂芬123123123"
            android:maxEms="5"
            android:ems="2"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/tv_s"
            android:text="12345678910111213141516"
            android:maxLines="2"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <!--android10 sp-->

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:text="12345678910111213141516"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="123"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dp10"
            android:drawableStart="@mipmap/ic_launcher"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="12dp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--
            android:drawableTint="#55555555"
            -->

        <TextView
            android:text="135252631258"
            android:includeFontPadding="false"
            android:autoLink="phone"
            android:textColorLink="@color/colorPrimaryDark"
            android:textDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_sss"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="5dp"
            android:autoSizeTextType="none"
            android:textSize="12dp"
            android:visibility="visible"
            android:text="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:layout_width="150dp"
            android:layout_height="50dp"/>


        <TextView
            android:lineSpacingMultiplier="1.5"
            android:text="ABCDEFGHIJKLMN"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            app:fontFamily="cursive"
            android:textFontWeight="1000"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <!--
            这个会适配为compatTextView,所以请将compatMode设置为NEVER
            app:fontFamily="cursive"-->

        <TextView
            android:hint="hint"
            android:enabled="false"
            android:background="@drawable/selector_bg"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:breakStrategy="high_quality"
            android:text="i am man, you are women"
            android:layout_width="75dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:text="i am man, you are women"
            android:layout_width="75dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="i am man, you are women"
            android:layout_width="75dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ABC123"
            android:freezesText="false"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textAllCaps="true"
            android:textScaleX="0.75"
            android:textIsSelectable="true"
            android:textAppearance="@style/TextAppearance.Compat.Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>