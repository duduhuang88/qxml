<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:backgroundTint="#5f2f1111"
        android:background="@color/sss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_1"
            android:layout_centerHorizontal="true"
            android:background="#11111111"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:id="@+id/view_2"
            android:layout_below="@+id/view_1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#11111111"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true" />

        <View
            android:id="@+id/view_3"
            android:layout_toLeftOf="@+id/view_1"
            android:layout_alignTop="@+id/view_2"
            android:layout_marginRight="-10dp"
            android:background="#11111111"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/view_1" />

        <View
            android:id="@+id/view_4"
            android:layout_alignBottom="@+id/view_3"
            android:background="#222222"
            android:layout_marginBottom="-50dp"
            android:layout_alignParentStart="true"
            android:layout_toRightOf="@+id/view_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/view_1"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/view_5"
            android:layout_above="@+id/view_4"
            android:layout_marginLeft="0.1dp"
            android:layout_marginBottom="20dp"
            android:background="#55555555"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <View
            android:id="@+id/view_6"
            android:layout_centerVertical="true"
            android:background="#666666"
            android:layout_marginLeft="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:background="#99999999"
            android:layout_alignEnd="@+id/view_1"
            android:layout_marginEnd="-20dp"
            android:layout_alignBaseline="@+id/view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view_1"
            android:layout_marginRight="-20dp" />

    </RelativeLayout>

</ScrollView>