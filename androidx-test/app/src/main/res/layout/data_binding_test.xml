<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="testB" type="boolean"/>

        <variable name="top" type="int"/>
        <variable
            name="info"
            type="com.yellow.qxml_test.TestDataBindingInfo" />
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@{top}"
        android:backgroundTint="#5f2f1111"
        android:tag="@{info.name}"
        android:background="@color/sss">

        <TextView
            android:tag="sss"
            android:onClick="@{listener}"
            android:background="@drawable/selector_bg"
            android:textColor="@color/colorPrimaryDark"
            android:text="@={info.name}"
            android:clickable="@{testB}"
            android:layout_width="90dp"
            android:layout_height="200dp"
            />

        <Button
            android:text="button"
            android:layout_marginTop="250dp"
            android:clickable="@{testB}"
            android:layout_width="200dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_marginTop="120dp"
            android:tag="445566"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:text="@={info.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:tag="lll"
            android:onClick="@{listener}"
            android:textColor="@color/colorPrimaryDark"
            android:text="123444"
            android:layout_margin="40dp"
            android:layout_marginTop="-10dp"
            android:paddingLeft="25dp"
            android:layout_width="290dp"
            android:layout_height="100dp"
            />

        <TextView
            android:tag="lll"
            android:textColor="#fff"
            android:text="123444"
            android:layout_marginTop="300dp"
            android:paddingLeft="99dp"
            android:background="#000000"
            android:layout_width="290dp"
            android:layout_height="70dp"
            />

    </RelativeLayout>
</layout>